{
  "compilerOptions": {
    "target": "es2020", // Updated for modern browsers; revert to "es5" if needed
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Changed for better compatibility with fs/path
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
  "@/*": ["./src/*"]
},
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/products/[code]/page.jsx",
    "src/app/blog/[slug]/page.jsx",
  ],
  "exclude": ["node_modules"]
}
